@page
@model VideoRentalShop_Blazor_Server_.Areas.Identity.Pages.Account.RegistrationModel

<div class="col-xs-1" align="center">

    <div class="text-start text-black" style="max-width:500px">
        <section>
            <form id="account" method="post">
                <h2 class="text-center mb-5">Регистрация нового пользователя</h2>
                <ht />

                <div>
                    <label asp-for="Input.Name" class="form-label">Имя</label>
                    <input asp-for="Input.Name" class="form-control mb-3" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                    <div asp-validation-summary="ModelOnly" class="text-danger" aria-required="true"></div>
                </div>

                <div>
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input asp-for="Input.Password" class="form-control mb-3" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Input.Role" class="form-label">Роль</label>
                    <select asp-for="Input.Role" class="form-checkform-select form-control mb-3" aria-required="true">
                        <option>User</option>
                        <option>Admin</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-4">Регистрация</button>
                </div>
            </form>
        </section>
    </div>

</div>
